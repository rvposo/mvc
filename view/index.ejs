<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Cadastro de Nomes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="container py-4">
  <h1 class="mb-4">Cadastro de Nomes</h1>

  <form action="/cadastrar" method="POST" class="row g-3 mb-4">
    <div class="col-auto">
      <input type="text" name="nome" class="form-control" placeholder="Digite o nome" required />
    </div>
    <div class="col-auto">
      <button class="btn btn-primary">Cadastrar</button>
    </div>
  </form>

  <table class="table table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Nome</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% nomes.forEach(n => { %>
        <tr>
          <td>
            <form action="/editar/<%= n.id %>" method="POST" class="d-flex">
              <input type="text" name="nome" value="<%= n.nome %>" class="form-control me-2" />
              <button class="btn btn-warning btn-sm">Editar</button>
            </form>
          </td>
          <td>
            <form action="/deletar/<%= n.id %>" method="POST">
              <button class="btn btn-danger btn-sm">Excluir</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
